<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:elevation="15dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardViewActivity">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"
        android:src="@drawable/facade"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Anantara Jaipur The Palm"
        android:textColor="#425d78"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingRight="33dp"
        android:gravity="center"
        android:id="@+id/textView13"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginLeft="10dp"
        android:tint="#ffab00"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_star_rate_black_18dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#425d78"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:gravity="fill"
        android:paddingBottom="8dp"
        android:text="5"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="65dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/textView14"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_thumb_up_black_48dp"
        android:tint="#039be5"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#425d78"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="93%"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/imageView8"
        android:layout_marginLeft="150dp"
        android:paddingBottom="18dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$230"
        android:paddingBottom="20dp"
        android:textColor="#039be5"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_toEndOf="@+id/textView13" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rambagh"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Anantara Jaipur The Palm"
        android:textColor="#425d78"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingRight="33dp"
        android:gravity="center"
        android:layout_below="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9"
        android:id="@+id/textView31" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ratingBar1"
        android:layout_below="@+id/textView31"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginLeft="10dp"
        android:tint="#ffab00"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_star_rate_black_18dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#425d78"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:gravity="fill"
        android:paddingBottom="8dp"
        android:text="5"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView31"
        android:layout_toEndOf="@+id/ratingBar1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp" />



</RelativeLayout>
   </android.support.v7.widget.CardView>
