<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.niraj.humptyapplication.StructureActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/hotel"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text=" Jaipur Heritage"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:textColor="#425d78"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingRight="25dp"
        android:gravity="center"
        android:textColorHighlight="@color/colorAccent" />

    <View
        android:id="@+id/div_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#abc6d6"
        android:layout_below="@+id/textView"/>


    <TextView
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#425d78"
        android:fontFamily="sans-serif"
        android:text="Jaipur"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:paddingLeft="70dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:text="VIEW"
        android:id="@+id/textView4"
        android:layout_alignEnd="@+id/textView3"
        android:gravity="center"
        android:textColor="#425d78"
        android:fontFamily="sans-serif"
        android:paddingLeft="70dp"
        android:textSize="16sp"
        android:layout_below="@+id/textView" />
    <View
        android:id="@+id/div_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#abc6d6"
        android:layout_below="@+id/textView4"

        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:textColor="#425d78"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:gravity="center"
        android:text="95%"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Likes"
        android:id="@+id/textView5"
        android:textColor="#425d78"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/textView2"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:tint="#425d78"
            android:layout_row="0"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wifi_black_48dp"
            android:layout_column="0" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:tint="#425d78"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="left"
            android:src="@drawable/ic_free_breakfast_black_48dp"

            android:layout_margin="15dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/imageView4"
            android:layout_row="0"
            android:tint="#425d78"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:src="@drawable/ic_directions_car_black_48dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/imageView5"
            android:layout_row="0"
            android:tint="#425d78"
            android:layout_column="4"
            android:src="@drawable/ic_local_dining_black_48dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/imageView6"
            android:layout_row="0"
            android:layout_column="5"
            android:paddingRight="5dp"
            android:tint="#425d78"
            android:layout_gravity="left"
            android:src="@drawable/ic_desktop_mac_black_48dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:textColor="#425d78"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="7dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif"
            android:id="@+id/textView6"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Breakfast"
            android:layout_marginLeft="5dp"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            android:textColor="#425d78"
            android:fontFamily="sans-serif"
            android:id="@+id/textView7"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="BMW"
            android:layout_marginLeft="15dp"
            android:paddingLeft="7dp"
            android:textSize="14sp"
            android:textColor="#425d78"
            android:fontFamily="sans-serif"
            android:id="@+id/textView8"
            android:layout_row="1"
            android:layout_column="3" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dining"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="#425d78"
            android:fontFamily="sans-serif"
            android:id="@+id/textView9"
            android:layout_row="1"
            android:layout_column="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="iMac"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="#425d78"
            android:fontFamily="sans-serif"
            android:id="@+id/textView10"
            android:layout_row="1"
            android:layout_column="5" />


    </GridLayout>

    <View
        android:id="@+id/div_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#abc6d6"
        android:layout_below="@+id/gridLayout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:text="Heritage of the Hi-Tech City"
        android:textSize="16sp"
        android:textColor="#425d78"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:id="@+id/textView11"
        android:paddingRight="140dp"

        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="India, a land of luxury, the realm of Maharajas, an exotic landscape of amazing variety. If you're planning to come to India for a luxury holiday, cultural or heritage holiday, honeymoon or family vacation, incentives et al book your stays in these accommodations which are themselves a destination. "
        android:textSize="14sp"
        android:textColor="#425d78"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:lineSpacingExtra="5dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:id="@+id/imageView7"
        android:src="@drawable/ic_clear_black_48dp"
        android:tint="@android:color/white"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:layout_alignParentEnd="true" />


</RelativeLayout>


</ScrollView>