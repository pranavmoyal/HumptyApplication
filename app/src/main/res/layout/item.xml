<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="285dp"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="6dp"
        android:elevation="15dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/iv.picture"
        android:layout_margin="0dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv.heritage"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textColor="#425d78"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingRight="31dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/iv.picture"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/tv.heritage"
        android:layout_marginLeft="8dp"
        android:tint="#ffab00"
        android:layout_marginTop="2dp"
        android:paddingBottom="6dp"
        android:src="@drawable/ic_star_rate_black_18dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#425d78"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:text="5"
        android:paddingTop="1dp"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="15dp"
        android:src="@drawable/ic_thumb_up_black_48dp"
        android:tint="#039be5"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#425d78"
        android:fontFamily="serif"
        android:textSize="20dp"
        android:gravity="fill"
        android:text="95%"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/imageView8"
        android:layout_marginLeft="125dp"
        android:paddingBottom="7dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="270dp"
        android:text="$230"
        android:paddingBottom="25dp"
        android:textColor="#039be5"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/imageView8"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
